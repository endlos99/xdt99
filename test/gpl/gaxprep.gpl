** macros

m1     .defm mac0     comment #1 $1
       byte 1         comment #1 $1
       .endm

       .defm mac2
       st   $1,V@$2   comment $1
       .endm

       .defm fmt
       fmt
       .endm

       .defm home
       home
       .endm

       .defm macnull
       .endm

       .defm macnest
       data $1
       .mac2 $1,$2
       data $2
       .endm

       .defm macglob
       dst @m3, $1
       .endm

       .defm macif
       .ifeq $1,1
       move 1,@>8301,#$1
       .else
       move 1,@>8302,#$1
       .endif
       .endm

       .defm move
       move $1,$2,$3
       .endm

m2     data 0
       .mac0

       data 1
       .mac2 :01010101, >2
       .mac2 '$1', -1
m3     equ >6000
       .mac2 1+2, m3

       data 2
       .home
       .fmt
       col 1
       fend

       data 3
       .macnull

       data 4
       .macnest >10, >2000

       data 5
       .macglob v@>1000

       data 6
       .macnest >1, 2

       data 7
       .macglob @>8300

       data 8
       .macif 1,@>1000
       .macif 2,@m1(@>8300)

       data 9
       .move 1,V@>0002(@>8384),V@3
       .move 1,@>8301,#7
       .move *m3+m3,V@2,V@3

       end
